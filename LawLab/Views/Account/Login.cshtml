@model LoginModel

<div id="headDiv" class="m-1 p-1 text-white"><h4 class="text-center m-2">Вход в учётную запись</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input class="form-control" asp-for="@Model.Email" placeholder="Ваша электронная почта" required>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input class="form-control" asp-for="@Model.Password" required>
        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
    </div>
    <button class="btn btn-primary" type="submit">Войти</button>
</form>